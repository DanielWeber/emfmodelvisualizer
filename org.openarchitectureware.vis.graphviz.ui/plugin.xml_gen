<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>

    <extension
            point="org.eclipse.ui.editors">
        <editor
            class="org.openarchitectureware.vis.graphviz.DotExecutableExtensionFactory:org.eclipse.xtext.ui.core.editor.XtextEditor"
            contributorClass="org.eclipse.ui.editors.text.TextEditorActionContributor"
            default="true"
            extensions="dot"
            id="org.openarchitectureware.vis.graphviz.Dot"
            name="Dot Editor">
        </editor>
    </extension>
    <extension
        point="org.eclipse.ui.handlers">
        <handler
            class="org.openarchitectureware.vis.graphviz.DotExecutableExtensionFactory:org.eclipse.xtext.ui.common.editor.hyperlinking.OpenDeclarationHandler"
            commandId="org.eclipse.xtext.ui.common.editor.hyperlinking.OpenDeclaration">
            <activeWhen>
                <reference
                    definitionId="org.openarchitectureware.vis.graphviz.Dot.Editor.opened">
                </reference>
            </activeWhen>
        </handler>
        <handler
            class="org.openarchitectureware.vis.graphviz.DotExecutableExtensionFactory:org.eclipse.xtext.ui.core.editor.handler.ValidateActionHandler"
            commandId="org.openarchitectureware.vis.graphviz.Dot.validate">
         <activeWhen>
            <reference
                    definitionId="org.openarchitectureware.vis.graphviz.Dot.Editor.opened">
            </reference>
         </activeWhen>
      </handler>
    </extension>
    <extension point="org.eclipse.core.expressions.definitions">
        <definition id="org.openarchitectureware.vis.graphviz.Dot.Editor.opened">
            <and>
                <reference definitionId="isActiveEditorAnInstanceOfXtextEditor"/>
                <with variable="activeEditor">
                    <test property="org.eclipse.xtext.ui.core.editor.XtextEditor.languageName" 
                        value="org.openarchitectureware.vis.graphviz.Dot" 
                        forcePluginActivation="true"/>
                </with>        
            </and>
        </definition>
    </extension>
    <extension
            point="org.eclipse.ui.preferencePages">
        <page
            class="org.openarchitectureware.vis.graphviz.DotExecutableExtensionFactory:org.eclipse.xtext.ui.core.editor.preferences.LanguageRootPreferencePage"
            id="org.openarchitectureware.vis.graphviz.Dot"
            name="Dot"
            category="org.eclipse.xtext.languages">
            <keywordReference id="org.openarchitectureware.vis.graphviz.ui.keyword_Dot"/>
        </page>
        <page
            category="org.openarchitectureware.vis.graphviz.Dot"
            class="org.openarchitectureware.vis.graphviz.DotExecutableExtensionFactory:org.eclipse.xtext.ui.common.editor.syntaxcoloring.SyntaxColoringPreferencePage"
            id="org.openarchitectureware.vis.graphviz.Dot.coloring"
            name="Syntax Coloring">
            <keywordReference id="org.openarchitectureware.vis.graphviz.ui.keyword_Dot"/>
        </page>
        <page
            category="org.openarchitectureware.vis.graphviz.Dot"
            class="org.openarchitectureware.vis.graphviz.DotExecutableExtensionFactory:org.eclipse.xtext.ui.common.editor.templates.XtextTemplatePreferencePage"
            id="org.openarchitectureware.vis.graphviz.Dot.templates"
            name="Templates">
            <keywordReference id="org.openarchitectureware.vis.graphviz.ui.keyword_Dot"/>
        </page>
    </extension>
    <extension
        point="org.eclipse.ui.keywords">
        <keyword
            id="org.openarchitectureware.vis.graphviz.ui.keyword_Dot"
            label="Dot"/>
    </extension>
    <extension
         point="org.eclipse.ui.commands">
      <command
            description="Trigger expensive validation"
            id="org.openarchitectureware.vis.graphviz.Dot.validate"
            name="Validate">
      </command>
    </extension>
    <extension point="org.eclipse.ui.menus">
        <menuContribution
            locationURI="popup:#TextEditorContext?after=group.open">
             <command
                 commandId="org.openarchitectureware.vis.graphviz.Dot.validate"
                 style="push"
                 tooltip="Trigger expensive validation">
            <visibleWhen checkEnabled="false">
                <reference
                    definitionId="org.openarchitectureware.vis.graphviz.Dot.Editor.opened">
                </reference>
            </visibleWhen>
         </command>  
         </menuContribution>
    </extension>

<!-- adding resource factories -->

	<extension
		point="org.eclipse.emf.ecore.extension_parser">
		<parser
			class="org.openarchitectureware.vis.graphviz.DotExecutableExtensionFactory:org.eclipse.xtext.resource.XtextResourceFactory"
			type="dot">
		</parser>
	</extension>




</plugin>
